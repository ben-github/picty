#!/usr/bin/python

import dbus, sys

bus = dbus.SessionBus()
bus.start_service_by_name('org.spillz.phraymd') ##THIS ONLY WORKS FOR SERVICES WITH A SERVICE FILE INSTALLED
server = dbus.Interface(bus.get_object('org.spillz.phraymd', '/org/spillz/phraymd'),
                        'org.spillz.phraymd')
if len(sys.argv) == 3:
    if sys.argv[1] == '-d':
        server.open_device(sys.argv[2])
else:
    uri = sys.argv[1] if len(sys.argv)>1 else ''
    print server.open_uri(uri)
